{
  "extends": ["config:base", ":preserveSemverRanges"],
  // "ignoreDeps": ["d3", "cli-ux", "d3-selection-multi", "core-js", "d3-selection"],
  "labels": ["dependencies"],
  // "schedule": ["after 10pm every weekday", "before 4am every weekday", "every weekend"],
  "packageRules": [
    {
      "packageNames": ["typescript", "d3", "cli-ux", "d3-selection-multi", "core-js", "d3-selection"],
      "updateTypes": "patch"
    },
    {
      "packagePatterns": ["^@angular/", "^@nrwl/"],
      "rangeStrategy": "bump"
    },
    {
      "packagePatterns": ["^@nrwl/"],
      "groupName": "nrwl packages",
      "schedule": ["after 9pm on sunday"]
    },
    {
      "packageNames": ["^@ngxs.*"],
      "groupName": "@ngxs"
    },
    {
      "packageNames": ["^@types/.*"],
      "groupName": "@types"
    },
    {
      "branchPrefix": "renovate/server-",
      "paths": ["apps/api/package.json"],
      "labels": ["dependencies", "dep:server"],
      "ignoreDeps": ["cli-ux", "sharp"]
    }
  ],
  "major": {
    "packageRules": [
      {
        "packagePatterns": [".*"],
        "semanticCommitType": "feat",
        "labels": ["dependencies", "dep:major"]
      }
    ]
  },
  "minor": {
    "packageRules": [
      {
        "packagePatterns": [".*"],
        "semanticCommitType": "fix",
        "labels": ["dependencies", "dep:minor"]
      }
    ]
  },
  "patch": {
    "packageRules": [
      {
        "packagePatterns": [".*"],
        "semanticCommitType": "chore",
        "labels": ["dependencies", "dep:patch"]
      }
    ]
  }
}
